@model IEnumerable<EcoVidaCR.Models.Destinos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@*Se pregunta si el usuario tiene rol de administrador*@
@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<form asp-controller="Destinos" asp-action="Index">
    <p>
        Buscar: <input type="text" name="Buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aspectos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aspectos)
            </td>
                @*Se pregunta si el usuario tiene rol de administrador*@
                @if (User.IsInRole("Administrador"))
                {

                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.idDestino  }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.idDestino  }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.idDestino  })
                    </td>
                }
        </tr>
}
    </tbody>
</table>
